<UserControl x:Class="Leibit.Controls.SimpleMenu"
             x:Name="me"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Leibit.Controls">

    <Border BorderBrush="{x:Static SystemColors.ActiveBorderBrush}" BorderThickness="1" Background="{DynamicResource SubMenuBackground}" DataContext="{Binding ElementName=me}">
        <ItemsControl ItemsSource="{Binding ItemsSource}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button BorderBrush="Transparent" Command="{Binding Command, ElementName=me}" HorizontalContentAlignment="Left" Loaded="__MenuButton_Loaded" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Border>
    
</UserControl>
